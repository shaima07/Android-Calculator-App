<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#0E0E0E"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="373dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/resultat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:paddingRight="30dp"
                    android:text="0"
                    android:textAlignment="viewEnd"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:insetLeft="8dp"
                android:insetRight="8dp"
                android:onClick="ajouterChiffre"
                android:text="7"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:insetLeft="8dp"
                android:insetRight="8dp"
                android:onClick="ajouterChiffre"
                android:text="8"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:insetLeft="8dp"
                android:insetRight="8dp"
                android:onClick="ajouterChiffre"
                android:text="9"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttonplus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#8C8B8B"
                android:insetLeft="5dp"
                android:insetRight="6.5dp"
                android:onClick="ajouterOperateur"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:insetLeft="8dp"
                android:insetRight="8dp"
                android:onClick="ajouterChiffre"
                android:text="4"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:insetLeft="8dp"
                android:insetRight="8dp"
                android:onClick="ajouterChiffre"
                android:text="5"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:insetLeft="8dp"
                android:insetRight="8dp"
                android:onClick="ajouterChiffre"
                android:text="6"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttonmoins"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#8C8B8B"
                android:insetLeft="5dp"
                android:insetRight="6.5dp"
                android:onClick="ajouterOperateur"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="28dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:insetLeft="8dp"
                android:insetRight="8dp"
                android:onClick="ajouterChiffre"
                android:text="1"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:insetLeft="8dp"
                android:insetRight="8dp"
                android:onClick="ajouterChiffre"
                android:text="2"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:insetLeft="8dp"
                android:insetRight="8dp"
                android:onClick="ajouterChiffre"
                android:text="3"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttonfois"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#8C8B8B"
                android:insetLeft="5dp"
                android:insetRight="6.5dp"
                android:onClick="ajouterOperateur"
                android:text="*"
                android:textColor="#FFFFFF"
                android:textSize="28dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:insetLeft="8dp"
                android:insetRight="8dp"
                android:onClick="ajouterChiffre"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttonsur"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.08"
                android:backgroundTint="#8C8B8B"
                android:insetLeft="5dp"
                android:insetRight="6.5dp"
                android:onClick="ajouterOperateur"
                android:text="/"
                android:textColor="#FFFFFF"
                android:textSize="28dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttoneff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:insetLeft="8dp"
                android:insetRight="8dp"
                android:onClick="reset"
                android:text="ac"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttonegal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:insetLeft="8dp"
                android:insetRight="8dp"
                android:onClick="calculer"
                android:text="="
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>